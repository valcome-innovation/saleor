//file:noinspection GroovyAssignabilityCheck
@Library('valcome_jenkins_functions')
import org.valcome.AWSCodebuild

node {
    withGoogleNotifications(getBuildInfo()) {
        stage("Build Image") {
            buildRemote()
        }

        stage("Tag Version") {
            gitPushTag(VERSION, 'github-ssh')
        }

        stage('Clean Workspace') {
            cleanWs()
        }
    }
}

def buildRemote() {
    def codebuild = new org.valcome.AWSCodebuild(this, "saleor", BRANCH, VERSION, null, null, "false", "true", "false")
    codebuild.triggerBuildAndAwait()
}

def getBuildInfo() {
    return """
        Image=saleor
        Version=${VERSION}
        Branch=${BRANCH}
    """
}
